<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#C62828</item>
        <item name="colorPrimaryDark">#B71C1C</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text_team">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif-medium"</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">15</item>
    </style>

    <style name="Text_score">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">15</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/button_round</item>
    </style>

    <style name="ButtonLand">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/button_round</item>
    </style>

    <style name="Button_reset">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/button_reset</item>
    </style>

</resources>
